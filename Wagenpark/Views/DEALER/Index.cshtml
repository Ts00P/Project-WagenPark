@model IEnumerable<Wagenpark.Models.DEALER>

@{
    ViewBag.Title = "ROCIT";
}

<div style="height: 30px; width: 100%; display:block; background-color: #343a40; border-radius: 10px;">
    <h2 style="color: white; padding-left: 10px;">Dealers</h2>
</div>

<p>
    <div style="border-style: solid; border-width: 2px; width: 150px; border-radius:5px; border-color: #919aa1; background-color:#919aa1;">
        <a href="@Url.Action("Create")"><i class="fas fa-plus-square" style="font-size: 16px; color: #fff;"></i></a>
        @Html.ActionLink("Dealer toevoegen", "Create", null, new { @style = "color: white;" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.DealerNr })"><i class="fas fa-edit" style="font-size: 20px; color: #919aa1;"> | </i></a>
            <a href="@Url.Action("Details", new { id = item.DealerNr })"><i class="fas fa-info-circle" style="font-size: 20px; color: #919aa1;"> | </i></a>
            <a href="@Url.Action("Delete", new { id = item.DealerNr })"><i class="fas fa-trash-alt" style="font-size: 20px; color: #919aa1;"></i></a>
        </td>
    </tr>
}

</table>
