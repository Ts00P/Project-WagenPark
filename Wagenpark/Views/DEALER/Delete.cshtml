@model Wagenpark.Models.DEALER

@{
    ViewBag.Title = "Delete";
}

<h2>Dealer Verwijderen</h2>

<h3>Weet u zeker dat u deze dealer wilt verwijderen?</h3>
<div>
    <h4>DEALER</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Naam)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Naam)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <p style="color:red;">Als het niet lukt om de dealer te verwijderen, dan heeft deze nog beschikbare auto's op zijn naam staan.</p>
        <div class="form-actions no-color">
            <input type="submit" value="Verwijderen" class="btn btn-default" /> |
            @Html.ActionLink("Terug", "Index")
        </div>
    }
</div>
